---
const { title } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
    <!-- Leaflet CSS -->
    <link rel="stylesheet" href="https://unpkg.com/leaflet@1.9.4/dist/leaflet.css" />
  </head>
  <body class="min-h-screen bg-white">
    <header class="bg-green-600 text-white">
      <nav class="container mx-auto px-4 py-3">
        <div class="flex justify-between items-center">
          <a href="/" class="text-2xl font-bold">London Playgrounds</a>
          <div class="space-x-4">
            <a href="/map" class="hover:text-green-200">Map</a>
            <a href="/about" class="hover:text-green-200">About</a>
          </div>
        </div>
      </nav>
    </header>

    <main>
      <slot />
    </main>

    <footer class="bg-gray-100 mt-12">
      <div class="container mx-auto px-4 py-8">
        <p class="text-center text-gray-600">
          Â© {new Date().getFullYear()} London Playgrounds Directory
        </p>
      </div>
    </footer>

    <!-- Leaflet JS -->
    <script is:inline src="https://unpkg.com/leaflet@1.9.4/dist/leaflet.js"></script>
  </body>
</html> 